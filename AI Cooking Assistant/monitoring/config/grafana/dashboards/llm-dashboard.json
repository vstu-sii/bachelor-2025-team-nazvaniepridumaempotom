{
  "dashboard": {
    "id": null,
    "title": "LLM Monitoring",
    "tags": ["llm", "langfuse"],
    "panels": [
      {
        "id": 1,
        "title": "LLM Calls",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(llm_calls_total[5m])"
          }
        ]
      },
      {
        "id": 2,
        "title": "Token Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "llm_tokens_used"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(llm_request_duration_seconds_bucket[5m]))"
          }
        ]
      }
    ]
  }
}